<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Phone_Number_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>LEN(Phone__c) &lt;&gt; 10</errorConditionFormula>
    <errorDisplayField>Phone__c</errorDisplayField>
    <errorMessage>Please enter a valid 10-digit phone number.</errorMessage>
</ValidationRule>
